<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/all_radiogroup"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_52" />

    <RadioGroup
        android:id="@+id/all_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rectangle"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/home"
            style="@style/HomeRadioButton"
            android:checked="true"
            android:drawableTop="@drawable/background_home" />

        <RadioButton
            android:id="@+id/circle"
            style="@style/HomeRadioButton"
            android:drawableTop="@drawable/background_circle" />

        <RadioButton
            android:id="@+id/cart"
            style="@style/HomeRadioButton"
            android:layout_marginTop="10dp"
            android:drawableTop="@drawable/commom_tab_btn_shopping_cart_n" />

        <RadioButton
            android:id="@+id/order"
            style="@style/HomeRadioButton"
            android:drawableTop="@drawable/background_list" />

        <RadioButton
            android:id="@+id/user"
            style="@style/HomeRadioButton"
            android:drawableTop="@drawable/background_my" />
    </RadioGroup>


</RelativeLayout>