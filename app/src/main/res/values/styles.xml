<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>  <!--删除图文混排标题-->
    </style>

    <!--登录页面-->
    <!--一、登录页面的输入框-->
    <style name="login_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_20</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">@dimen/sp_20</item>
    </style>

    <!--二、登录页面的子相对布局-->
    <style name="login_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_35</item>
        <item name="android:layout_marginRight">@dimen/dp_35</item>
    </style>

    <!--三、登录页面的横线-->
    <style name="login_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_2</item>
        <item name="android:layout_marginLeft">@dimen/dp_35</item>
        <item name="android:layout_marginRight">@dimen/dp_35</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <!--一、注册页面的输入框-->
    <style name="register_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_20</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>


    <!-- 首页RadioButton切换按钮 -->
    <style name="HomeRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/dp_35</item>
        <item name="android:button">@null</item>
    </style>

    <!--详情页的radioGroup-->
    <style name="detail_rb">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/sp_15</item>
    </style>

    <!--发表圈子页面-->
    <style name="back_btn_style">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">13dp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="btn_ok_style">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">13dp</item>
        <item name="android:layout_marginLeft">7dp</item>
        <item name="android:layout_marginRight">7dp</item>
    </style>

    <style name="title_font_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_toRightOf">@+id/back</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>

    <style name="title_bar_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <!--个人中心页面的外部布局-->
    <style name="personal_ll">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/dp_24</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--个人中心页面的图片-->
    <style name="personal_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <!--个人中心页面的内部布局-->
    <style name="personal_lltwo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_marginLeft">@dimen/dp_24</item>
        <item name="android:layout_marginRight">@dimen/dp_24</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!--个人中心页面的文字-->
    <style name="personal_tv">
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_22</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
